@model ClassRoomListViewModel
<partial name="_PartialNavbar"></partial>
<div class="row">
	<partial class="col-2" name="_PartialSlidebar"></partial>
	<div class="col-9 mt-3">
		<div class="col-5 offset-4">
			<form method="post" asp-area="Admin" asp-controller="ClassRoom" asp-action="EditClassRoom" enctype="multipart/form-data">
				<h2 class="fw-bold text-center text-secondary mt-2 mb-2">Sınıf Güncelleme Sayfası</h2>
				<input type="hidden" asp-for="Id"/>
				<div class="form-group mt-2">
					<label class="form-label fw-bold" asp-for="Name"></label>
					<input type="text" class="form-control" asp-for="Name" />
					<span class="fw-bold text-danger" asp-validation-for="Name"></span>

				</div>



				<button type="submit" class="btn btn-primary mt-2 btn-block">Kaydet</button>
				@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
				{
						<div class="alert alert-danger mt-2">
						@ViewBag.ErrorMessage
						</div>
				}
			</form>
		</div>

	</div>
</div>